<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
    <shape android:shape="oval">
        <solid android:color="@color/black"/>
        <stroke android:color="@color/black" android:width="5dp"/>
        <!-- Set the same value for both width and height to get a circular shape -->
        <size android:width="250dp" android:height="250dp"/>
        <padding android:left="@dimen/big" android:right="@dimen/big"  android:top="@dimen/big" android:bottom="@dimen/big"/>
    </shape>
    </item>
    <item android:drawable="@drawable/ic_fhd_off" android:top="@dimen/large" android:bottom="@dimen/large" android:left="@dimen/big" android:right="@dimen/big">
    </item>
</layer-list>